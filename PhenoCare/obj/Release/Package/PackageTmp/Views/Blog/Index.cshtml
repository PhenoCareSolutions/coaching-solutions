@model PhenoCare.RssChannel

@{
    ViewBag.Title = "PhenoCare Solutions - Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact-top-buffer">
    <div class="col-md-offset-1 col-md-10 ">

        @foreach (var item in Model.Rss.Items)
        {
            <p class="lead"><a href="@item.Link" target="_blank">@item.Title</a></p>
            <p>
                <small><span class="glyphicon glyphicon-time"></span> Posted on @Html.Raw(item.PubDate)</small>
            </p>
            <div class="well">
                <p>@Html.Raw(item.Description)</p>
            </div>
            
            <a class="btn btn-info" href="@item.Link" target="_blank"><span class="glyphicon glyphicon-comment"></span>  Leave a Comment</a>
            <hr>
        }
    </div>
</div>
<!-- /.container -->

@section pageScript
{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".nav li").removeClass("active");
            $("#blog").addClass('active');
        });
    </script>

