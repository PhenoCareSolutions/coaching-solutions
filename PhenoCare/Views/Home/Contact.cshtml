@model PhenoCare.Models.Contact

@{
    ViewBag.Title = "Contact";
}

<div class="container col-md-offset-1 col-md-10 contact-top-buffer">
    <div class="row">
        <div class="bg-primary well-sm">
            <h1>Contact us, to help you!</h1>
            <p>with our phenomenal care</p>
        </div>
    </div>
    <hr/>
    <div id="contact_form" class="row">
        <div class="col-12 col-sm-12 col-lg-12">
            <h2>CAN WE HELP YOU TO STAND OUT FROM THE CROWD?</h2>
            <p>We would love to help and to work with you. Please give us a few details and we'll get back to you soon.</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken() 
                <div class="form-group">
                    @if (@Model.Submitted)
                    {
                        <div class="alert alert-success">Thank you for message. We will get back to you soon.</div>
                    }
                    @Html.TextBoxFor(m => m.Name, new { @type = "text", @class = "form-control", @id = "name", @name = "name", @placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Name)
                    <span class="help-block" style="display: none;">Please enter your name.</span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @id = "email", @name = "email", @placeholder = "Email Address" })
                    @Html.ValidationMessageFor(m => m.Email)
                    <span class="help-block" style="display: none;">Please enter a valid e-mail address.</span>
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Message, new { @rows = "10", @cols = "100", @class = "form-control", @id = "message", @name = "message", @placeholder = "Message" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
                <div class="form-group">
                    <button type="submit" id="feedbackSubmit" class="btn btn-primary btn-lg">Submit</button>
                </div>
            }

        </div>
        <!--/span-->
    </div>
    <!--/row-->
</div>


