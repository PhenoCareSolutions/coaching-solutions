@model PhenoCare.Controllers.EnrollmentViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-offset-1 col-md-10 contact-top-buffer">
    <div class="row">
        <div class="jumbotron">
            <h1>Enquiry!</h1>
        </div>
    </div>

    <div id="contact_form" class="row">
        <div class="col-md-12 col-sm-12 col-lg-12">
            <h2>Please provide few details.</h2>
            <p>We'll contact you soon to know your needs and help you to enroll in.</p>
            
            @using (Html.BeginForm("PostEnrollment", "Enrollment", FormMethod.Post))
            {
                @Html.AntiForgeryToken() 
                <div class="form-group">
                    @if (@Model.Submitted)
                    {
                        <div class="alert alert-success">Thank you for your intrest in our course. We recieved your details. We will get back to you soon.
                            <a href="@Url.Action("Index","Coaching")" class="btn btn-link">View our technology Tracks.</a>
                        </div>
                    }
                    @Html.TextBoxFor(m => m.Name, new { @type = "text", @class = "form-control", @id = "name", @name = "name", @placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Name)
                    <span class="help-block" style="display: none;">Please enter your name.</span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Phone, new { @type = "phone", @class = "form-control", @id = "phone", @name = "phone", @placeholder = "Phone number" })
                    @Html.ValidationMessageFor(m => m.Phone)
                    <span class="help-block" style="display: none;">Please enter a valid phone number.</span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @id = "email", @name = "email", @placeholder = "Email Address" })
                    @Html.ValidationMessageFor(m => m.Email)
                    <span class="help-block" style="display: none;">Please enter a valid e-mail address.</span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Institute, new { @type = "text", @class = "form-control", @id = "institute", @name = "institute", @placeholder = "Company/College Name" })
                    @Html.ValidationMessageFor(m => m.Institute)
                    <span class="help-block" style="display: none;">Please enter Company/College name.</span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Course, new { @type = "text", @class = "form-control", @id = "course", @name = "course", @placeholder = "Course Name" })
                    @Html.ValidationMessageFor(m => m.Course)
                    <span class="help-block" style="display: none;">Please enter course name.</span>
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Comment, new { @rows = "10", @cols = "100", @class = "form-control", @id = "comment", @name = "comment", @placeholder = "Comments" })
                    @Html.ValidationMessageFor(m => m.Comment)
                </div>
                <div class="form-group">
                    <button type="submit" id="submit" class="btn btn-primary btn-lg">Submit</button>
                </div>
            }

        </div>
        <!--/span-->
    </div>
    <!--/row-->
</div>


