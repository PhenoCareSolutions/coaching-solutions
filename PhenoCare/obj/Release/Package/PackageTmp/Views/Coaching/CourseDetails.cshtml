@model IEnumerable<PhenoCare.Models.Course>

@{
    ViewBag.Title = "CourseDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact-top-buffer">
    <div class="col-md-offset-1 col-md-10 ">

        <div class="row">
            <div class="bg-primary well-sm">
                <h1>Courses</h1>
                <p>specially designed for you.</p>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-2">
                <a href="@Url.Action("Index","Enrollment",new {course=string.Empty})" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-edit"></span> Enquiry!
                </a>
            </div>
            <div class="col-md-offset-8 col-md-2">
                <a href="@Url.Action("Index")" class="btn btn-warning btn-lg"><span class="glyphicon glyphicon-list"></span> View Tracks
                </a>
            </div>
        </div>
        <br />
        <div class="row">

            <table class="table table-striped table-hover table-responsive">
                @foreach (var course in @Model)
                {
                    <tr>
                        <td>
                            <h4>@string.Format(" {0}", course.Name)</h4>
                        </td>
                        <td>
                            @if (course.HasTopics)
                            {
                                <a href="@Url.Action("TopicDetails", new {@courseId = course.ID})" class="btn btn-default btn-lg pull-right"><span class="glyphicon glyphicon-book"></span> Topics
                                </a>
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
</div>

